<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/people_list_person_layout">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/people_list_person_avatar"
        android:src="@mipmap/ic_launcher"
        android:layout_margin="8dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/people_list_person_name"
        android:text="Name"
        android:textSize="17sp"
        android:layout_toRightOf="@id/people_list_person_avatar"
        android:layout_margin="8dp"
        android:layout_centerVertical="true"
        android:maxLines="2"
        android:ellipsize="end"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:id="@+id/people_list_delimiter"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/people_list_person_avatar"
        android:background="@color/light_grey_color"/>


</RelativeLayout>