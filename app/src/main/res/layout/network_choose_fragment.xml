<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:clickable="false"
    >

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/network_choose_card"
            android:layout_centerInParent="true"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="4dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/network_choose_header">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/network_choose_title"
                    android:layout_margin="8dp"
                    android:layout_centerVertical="true"
                    android:text="Post to:"
                    android:textColor="@color/grey_color"
                    android:textSize="17sp"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/network_choose_button"
                    android:src="@drawable/ic_send"
                    android:tint="@color/colorAccent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:padding="8dp"/>
                </RelativeLayout>

                <ly.loud.loudly.ui.IconsHolder
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/network_choose_header"
                    android:id="@+id/network_choose_icons_holder"
                    android:background="@null"
                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
</RelativeLayout>