<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ly.loud.loudly.InitialSettingsActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VK"
        android:textColor="#fff"
        android:id="@+id/vk_button"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimary"
        android:layout_margin="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:onClick="VKButtonClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Facebook"
        android:textColor="#fff"
        android:id="@+id/fb_button"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimary"
        android:layout_margin="5dp"
        android:layout_below="@+id/vk_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:onClick="FBButtonClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mail.ru"
        android:textColor="#fff"
        android:id="@+id/mail_ru_button"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimary"
        android:layout_margin="5dp"
        android:layout_below="@id/fb_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:onClick="MailRuButtonClick" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/mail_ru_button">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vk_box"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fb_box"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mail_ru_box"/>

    </LinearLayout>

</RelativeLayout>
