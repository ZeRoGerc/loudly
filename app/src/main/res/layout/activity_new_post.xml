<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".PostCreateActivity">

    <include
        android:id="@+id/post_toolbar"
        layout="@layout/post_toolbar">
    </include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/post_footer"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:weightSum="3">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/post_geo_data_button"
            android:background="@null"
            android:src="@mipmap/ic_place_white_24dp"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/post_camera_button"
            android:background="@null"
            android:src="@mipmap/ic_photo_camera_white_24dp"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/post_gallery_button"
            android:background="@null"
            android:src="@mipmap/ic_photo_library_white_24dp"
            android:onClick="pickImage"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/post_toolbar"
        android:layout_above="@id/post_footer"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:id="@+id/post_edit_text"
                android:layout_alignParentTop="true"
                android:minLines="1"
                android:padding="12dp"
                android:textSize="17sp"
                android:hint="What's on your mind?"
                android:gravity="start"
                android:background="@null" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/new_post_post_image"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:layout_below="@id/post_edit_text"/>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>