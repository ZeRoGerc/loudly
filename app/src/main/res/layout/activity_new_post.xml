<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".PostCreateActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/new_post_parent"
    android:background="@android:color/black"
    android:padding="8dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:id="@+id/new_post_header">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/new_post_post_title"
                    android:text="New Post"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/grey_blue"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"/>

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:id="@+id/new_post_send_button"
                    android:src="@drawable/ic_send"
                    android:tint="@color/grey_color"
                    android:background="@null"
                    android:layout_margin="8dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:id="@+id/new_post_footer"
                android:background="@color/light_grey_color"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:weightSum="3">

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/new_post_geo_data_button"
                    android:background="@null"
                    android:src="@drawable/ic_location"
                    android:tint="@color/grey_color"/>

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/new_post_camera_button"
                    android:background="@null"
                    android:src="@drawable/ic_camera"
                    android:tint="@color/grey_color"/>

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:id="@+id/new_post_gallery_button"
                    android:background="@null"
                    android:src="@drawable/ic_collections"
                    android:tint="@color/grey_color"/>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/new_post_post_image"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:layout_above="@id/new_post_footer"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textMultiLine"
                android:id="@+id/new_post_edit_text"
                android:layout_below="@id/new_post_header"
                android:layout_above="@id/new_post_post_image"
                android:minLines="1"
                android:padding="12dp"
                android:textSize="17sp"
                android:hint="What's on your mind?"
                android:gravity="start"
                android:background="@null" />



        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>